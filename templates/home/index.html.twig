{% extends 'base.html.twig' %}

{% block title %}Accueil
{% endblock %}


{% block body %}
	<div class="container mt-4">
		<h2>Les derniers articles</h2>
		<div class="row felx">
			{% for post in posts %}

				<div class="card my-3">
					<div class="card-body">
						<h5 class="card-title">
							<a href="{{path('app_show_post', {slug: post.slug} )}}">{{ post.title }}</a>

						</h5>
						<p class="card-text">{{ post.content}}</p>
						<p class="card-text">{{ post.users.firstname}}</p>

					</div>
				</div>

			{% endfor %}
		</div>
	</div>

{% endblock %}
